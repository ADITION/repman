{
    "name": "buddy-works/repman",
    "type": "project",
    "description": "PHP Repository Manager - fast packagist proxy",
    "license": "proprietary",
    "require": {
        "php": "^7.4.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-zip": "*",
        "ext-intl": "*",
        "cbschuld/browser.php": "^1.9",
        "composer/composer": "1.10.x-dev",
        "composer/semver": "^1.5",
        "munusphp/munus": "^0.1.0",
        "ramsey/uuid-doctrine": "^1.5",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/asset": "5.0.*",
        "symfony/console": "5.0.*",
        "symfony/dotenv": "5.0.*",
        "symfony/flex": "^1.3.1",
        "symfony/form": "5.0.*",
        "symfony/framework-bundle": "5.0.*",
        "symfony/mailer": "5.0.*",
        "symfony/messenger": "5.0.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/orm-pack": "^1.0",
        "symfony/security-bundle": "5.0.*",
        "symfony/twig-pack": "^1.0",
        "symfony/validator": "5.0.*",
        "symfony/yaml": "5.0.*"
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "require-dev": {
        "coduo/php-matcher": "^4.0",
        "dama/doctrine-test-bundle": "^6.3",
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.9",
        "phpstan/phpstan-doctrine": "^0.12.9",
        "phpstan/phpstan-phpunit": "^0.12.5",
        "phpstan/phpstan-symfony": "^0.12.3",
        "phpunit/phpunit": "^8.5",
        "sensiolabs/security-checker": "^6.0",
        "symfony/browser-kit": "5.0.*",
        "symfony/maker-bundle": "^1.14",
        "symfony/profiler-pack": "^1.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.0.*"
        }
    },
    "autoload": {
        "psr-4": {
            "Buddy\\Repman\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Buddy\\Repman\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "check-cs": [
            "php-cs-fixer fix --dry-run --diff"
        ],
        "fix-cs": [
            "php-cs-fixer fix"
        ],
        "phpstan": [
            "bin/console cache:clear --env=test",
            "phpstan analyse src tests --level=max"
        ],
        "phpunit": [
            "phpunit --colors=always"
        ],
        "coverage-html": [
            "@phpunit --coverage-html coverage"
        ],
        "coverage-ci": [
            "phpunit --colors=never --coverage-clover 'clover.xml'",
            "bin/coverage-checker clover.xml 99"
        ],
        "reset-db": [
            "bin/console doctrine:database:drop --force --if-exists",
            "bin/console doctrine:database:create",
            "bin/console doctrine:migrations:migrate --no-interaction",
            "bin/console messenger:setup-transports"
        ],
        "tests": [
            "@check-cs",
            "@phpstan",
            "@coverage-ci",
            "bin/console lint:twig templates --show-deprecations",
            "bin/console cache:warmup --env=prod"
        ],
        "security": [
            "bin/console security:check"
        ]
    }
}
